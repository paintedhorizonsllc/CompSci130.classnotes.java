	//add a method that performs the option fr a single student
	//this method takes from the main method the following: the 3 Arrays( names, ages, gpas
	//then it will read the student's name age gpa from the user
	//finally it will add the inputed student to the end of the current students list

	public static void addSingleStudent( String[] names, int[] ages, double [] gpas, int studentCount)
	{
		System.out.println("Adding a single student...");
		String inputedName;  int inputedAge; double inputedGPA;
		System.out.print("Enter First Name: ");
		inputedName=input.next();
		System.out.print("Enter Age: ");
		inputedAge=input.nextInt();
		System.out.print("Enter GPA: ");
		inputedGPA = input.nextDouble();
		
		//add the inputed info @ index = studentCount
		
		names[studentCount] = inputedName; ages[studentCount]= inputedAge; gpas[studentCount] = inputedGPA;
		System.out.printf("Student %s added successfully. \n",  inputedName);
		
		
	}//end of addSingleStudent
	
	
	//a method that performs the options Display all students
	//this method takes from main methods
	public static void DisplayAllStudents (String[] names, int[] ages, double [] gpas, int studentCount)
	{//start DisplayAllStudents
		
		System.out.println("Displaying all students: ");
		System.out.printf("%10s%25s%15s\n", "Name", "Age", "GPA");
		System.out.printf("%10s%25s%15s\n", "----", "---", "---");
		
		for ( int index = 0; index < studentCount; index++)
		{//start for
			System.out.printf("%10s%25d%15.2f\n", names[index], ages[index], gpas[index]);
		}//end for
		
	
		
	}//end DisplayAllStudents
	
	public static int AddMultipleStudents (String[] names, int[] ages, double [] gpas, int studentCount)
	{
		System.out.println("Adding multpile students...");
		System.out.println("Enter the complete roster: ");
		
		//we should remove all current students from the list 
		
		studentCount=0;
		//we will keep reading from the user until we find the keyword Stop
		
		String inputedName;  int inputedAge; double inputedGPA;
		inputedName= input.next();
		while( ! inputedName.equals("stop"))
				{
			inputedAge = input.nextInt();
			inputedGPA = input.nextDouble();
			
			names[studentCount] = inputedName; ages[studentCount]= inputedAge; gpas[studentCount] = inputedGPA;
			
			//read the next student
			inputedName= input.next();
			studentCount++;
				}//end while
		System.out.printf("%d students added to the roster. \n", studentCount);
		
		return studentCount;
	
	}//endAddMultipleStudents
	//add a method that finds a student by name: it will apply LinearSearch algorith
	//it takes from the main and then it will read the student name that we would like to see if in our system or not
	
	public static void FindStudentByName(String[] names, int[] ages, double [] gpas, int studentCount)
	{
		String keyName;
		System.out.print("Enter the name of the student to find: ");
		keyName = input.next();
		boolean isFound = false;
		for( int index = 0; index < studentCount; index++)
		{
			if (names[index].equals(keyName) == true)
			{
				System.out.println("Student found");
				System.out.printf("Name: %s\n",  names[index]);
				System.out.printf("Age: %s\n",  ages[index]);
				System.out.printf("GPA: %s\n",  gpas[index]);
				//no need to continue to search if we have a match
				break;
					
			}//end if
			
		}//end for
		if (isFound ==false)
{
	System.out.printf("Student %s not found in the roster.\n",  keyName);
}
		
	}//End FindStudentByName method
	//Write a recursive methods that returns base to power exponent
	public static int Power( int base, int exponent)
	{
		if ( exponent == 0 )
		{
			return 1;
		}
		else
		{
			return base * Power (base, exponent -1);
		}
		
	}
	// double ^ int
	public static double Power(double base, int exponent) {
	    if (exponent == 0) {
	        return 1.0;
	    } else if (exponent > 0) {
	        return base * Power(base, exponent - 1);
	    } else {
	        // handle negative exponents: base^(-n) = 1 / base^n
	        return 1.0 / Power(base, -exponent);
	    }
	}
	// char ^ int  (uses ASCII/Unicode value of the char)
	public static int Power(char base, int exponent) {
	    int numericBase = (int) base;      // cast char to int
	    return Power(numericBase, exponent); // reuse the int version
	}
	// String ^ int  (String contains a number, e.g. "5")
	public static int Power(String base, int exponent) {
	    int numericBase = Integer.parseInt(base); // convert String → int
	    return Power(numericBase, exponent);      // reuse the int version
	}

		
	//write a recursive method that takes a positive integer as a parameter and then it will compute the factorial of that taken integer
	
	public static int factorial (int n)
	{//start method
	
	//stopping section : Base section: an if statement that stop the recursion, otherwise it will go forever.
		if (n <= 1) 
		{
			return 1;
		}	//Recursive Call Section
			else 
		{
			return n * factorial ( n - 1 ); //recursive calling statement
		}
	}//end factorial method
	
	// factorial for double (expects whole-number values)
	public static double factorial(double n) {
	    if (n <= 1.0) {
	        return 1.0;
	    } else {
	        return n * factorial(n - 1.0);
	    }
	}
	// factorial for char (uses its numeric value)
	public static int factorial(char c) {
	    int numeric = (int) c;        // e.g. '5' → 53, 'A' → 65
	    return factorial(numeric);    // call the int version
	}
	// factorial for String (String contains a number, e.g. "6")
	public static int factorial(String s) {
	    int n = Integer.parseInt(s);  // convert String → int
	    return factorial(n);          // reuse the int version
	}
	//Section 4: code for the other methods (User-Defined Methods
		public static void printGrade(int score)
		{//start method
			if (score >= 90)
			{
				System.out.printf("The grade for the score %d is A.\n", score);	
			}
			else if ( score >= 80 && score <=89) 
			{
				System.out.printf("The grade for the score %d is B.\n", score);	
			}
			else if ( score >= 70 && score <=79) 
			{
				System.out.printf("The grade for the score %d is C.\n", score);	
			}
			else if (score < 69)
			{
				System.out.printf("The grade for the score %d is D.\n", score);	
			}
			
		}//end method	
			
			
			
			

			
		
		//program exercise 3 : Slddoe 19
		
			public static int countLetters(String s)
			{//start method
				int count = 0; //hold the wanted result: number of letters in the taken (inputedstring), this will be the returned value
				for (int index = 0; index <= s .length() - 1; index++)
				{
					//get a copy of the char at the current index by using the methd charAt
					char copy = s.charAt(index);
					//test to see if the retrieved copy is a letter or not
					if (Character.isLetter(copy) ==true)
					{
						count++;
					}
					
				}//end for statement
				return count;
			
		
			}//end method
