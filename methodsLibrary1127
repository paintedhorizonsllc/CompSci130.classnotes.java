	//write a void method named calcStats that takes a 2D integer array and then displays:
	//total, product, and the average of all elements in that taken array
	
	public static void calcStat(int [] [] takenArray){
		int total = 0, product = 1;
		
		for (int i= 0;i < takenArray.length; i++)//outer loop for rows: to visit each row in array
		{
		  for (int j = 0; j < takenArray[i].length; j++)//ineer loop for the cols: visit each element in the row we are visiting now
			{
		    // access each element using two indexes 
			  System.out.printf("%d\t", takenArray[i][j]);
				
			  //check what this does: 
			  product+=takenArray[i][j];
			  total+=takenArray[i][j];
			}//end of inner
			System.out.println(); 
		  
			}//end of inner
		 System.out.printf("Total = %d\n", total);
		 System.out.printf("Product = %d\n", product);
		 System.out.printf("Average = %.2f", (double) total / (takenArray.length * takenArray [0].length));
	  
	}
	
		
